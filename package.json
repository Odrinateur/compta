{
  "name": "compta",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:up": "bun with-env drizzle-kit up",
    "db:generate": "bun with-env drizzle-kit generate",
    "db:push:remote": "bun with-env drizzle-kit push",
    "db:push:local": "bun with-env bun with-local-db drizzle-kit push --config drizzle.local.config.ts",
    "db:check": "bun with-env drizzle-kit check",
    "db:studio:local": "bun with-env bun with-local-db drizzle-kit studio --config drizzle.local.config.ts",
    "db:studio:remote": "bun with-env drizzle-kit studio",
    "d1:seed:remote": "wrangler d1 execute compta --remote --file=./src/server/db/seed.sql",
    "d1:migrate:local": "wrangler d1 migrations apply compta --local",
    "d1:migrate:remote": "wrangler d1 migrations apply compta --remote",
    "dev": "bun with-env next dev",
    "dev:local": "bun with-env next dev",
    "build": "bun with-env next build && bun with-env npx @opennextjs/cloudflare build --skip-build",
    "lint": "bun with-env next lint",
    "dev:worker": "wrangler dev",
    "build:worker": "bun build && bun with-env npx @opennextjs/cloudflare build --skip-build",
    "preview": "bun build:worker && wrangler dev",
    "deploy": "bun build:worker && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "bindings": "cf-bindings-proxy",
    "with-env": "dotenv -e .dev.vars --",
    "with-local-db": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit)"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.11",
    "@trpc/client": "^11.7.2",
    "@trpc/next": "^11.7.2",
    "@trpc/react-query": "^11.7.2",
    "@trpc/server": "^11.7.2",
    "cf-bindings-proxy": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "geist": "^1.5.1",
    "lucide-react": "^0.561.0",
    "next": "15.4.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "server-only": "^0.0.1",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@opennextjs/cloudflare": "^1.14.6",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.9",
    "eslint-plugin-drizzle": "^0.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vercel": "^44.7.3",
    "wrangler": "^4.54.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.36.1"
  }
}
